generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Venue {
  id          String    @id @default(cuid())
  slug        String    @unique
  name        String
  description String?
  image       String?
  address     String
  city        String
  zip         String
  capacity    Int
  concerts    Concert[]
}

model Artist {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  image       String
  concerts    Concert[]
}

model Concert {
  id   String    @id @default(cuid())
  name String
  slug String    @unique
  date DateTime  @db.Date
  time DateTime? @db.Time

  venue   Venue  @relation(fields: [venueId], references: [id])
  venueId String

  artists      Artist[]
  ticketHouses TicketHouse[]

  createdAt DateTime @default(now())
}

model TicketHouse {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?
  logo        String

  concerts Concert[]
}
